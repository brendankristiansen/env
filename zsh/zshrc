source ~/.zplug/zplug

zplug "b4b4r07/zplug"
zplug "zsh-users/zsh-syntax-highlighting"
zplug "mafredri/zsh-async"
zplug "sindresorhus/pure", on:"mafredri/zsh-async"
zplug "zsh-users/zsh-completions"
zplug "plugins/virtualenvwrapper", from:oh-my-zsh
zplug "plugins/vi-mode", from:oh-my-zsh
zplug "djui/alias-tips"
#zplug "Tarrasch/zsh-colors"
zplug "dlm/zsh-colors", commit:23f95ba8d8da28007bb7f796875e5a10961c2a56
zplug "caarlos0/zsh-pg"

# Install plugins if there are plugins that have not been installed
if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

# Then, source plugins and add commands to $PATH
zplug load --verbose

# setup vim bindkeys
bindkey -v
bindkey kj vi-cmd-mode
bindkey '^y' kill-whole-line

# load zle
source ${HOME}/.zsh/zle.zsh

# shared between bash and zsh
source ${HOME}/.shell/aliases
source ${HOME}/.shell/env_vars

# complete .. to ../
zstyle ':completion:*' special-dirs true

# Add local bin path
export PATH="$PATH:$HOME/bin"
